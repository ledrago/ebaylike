<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Postal adress</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td><%= user.postal_adress %></td>
        <td><%= link_to 'Profile', user, class: "btn btn-info" %>
          <%= link_to 'Edit', edit_user_path(user) , class: "btn btn-info" if current_user == user || current_user.admin? %>
        <% if current_user == user || current_user.admin? %>
          <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info" %>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New User', new_user_path, method: :get, :class => "btn btn-primary" %>
