<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
    <div class="field">
      <%= f.label :price_minimum, "starting price" %><br>
      <%= f.text_field :price_minimum %>
    </div>
    <div class="field">
      <%= f.label :mini_bid, "reserving price" %><br>
      <%= f.text_field :mini_bid %>
    </div>
    <div class="field">
      <%= f.label :immediate_price, "immediate purchasing price" %><br>
      <%= f.text_field :immediate_price %>
    </div>
    <div class="field">
      <%= f.label :bidding_date_end, "end of bidding" %><br>
      <%= f.date_select :bidding_date_end %>
    </div>


  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.collection_select(:category_id, Category.all, :id, :name) %>
  </div>

    <p><%= link_to 'Create New Category', new_category_path %></p>
  <div class="actions">
    <%= f.submit %>
  </div>
    <% if current_user || current_user.admin? %>
        <%= link_to 'Destroy', @product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info" %>
    <% end %>
<% end %>
